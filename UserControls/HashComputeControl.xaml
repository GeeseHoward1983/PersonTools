<UserControl x:Class="PersonalTools.UserControls.HashComputeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PersonalTools.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="1200" Margin="10" AllowDrop="True" Drop="HashTab_Drop" PreviewDragOver="Grid_PreviewDragOver">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <!-- 第一行：MD5和SHA1并排显示 -->
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- MD5计算 -->
                <GroupBox Grid.Column="0" Header="MD5计算" Margin="0,0,5,0" MinWidth="280">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="输入要计算MD5的值：" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBox Name="MD5InputTextBox" Height="25" VerticalAlignment="Center" Width="400"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                            <RadioButton Name="MD5StringInputRadio" Content="普通字符串" GroupName="MD5InputType" IsChecked="True" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <RadioButton Name="MD5HexInputRadio" Content="Hex字符串" GroupName="MD5InputType" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <Button Content="计算MD5" Click="CalculateMD5_Click" Padding="10,3" Margin="0,0,5,0" VerticalAlignment="Center"/>
                            <Button Content="清空" Click="ClearMD5_Click" Padding="10,3" Margin="0,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>

                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="MD5结果：" Margin="0,0,5,0" VerticalAlignment="Center"/>
                            <Label Grid.Column="1" Name="MD5ResultLabel" Content="等待计算..." Padding="5" 
                                   Background="White" BorderBrush="Gray" BorderThickness="1" 
                                   HorizontalContentAlignment="Left"/>
                        </Grid>
                    </Grid>
                </GroupBox>

                <!-- SHA1计算 -->
                <GroupBox Grid.Column="1" Header="SHA1计算" Margin="5,0,0,0" MinWidth="300">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="输入要计算SHA1的值：" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBox Name="SHA1InputTextBox" Height="25" VerticalAlignment="Center" Width="400"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                            <RadioButton Name="SHA1StringInputRadio" Content="普通字符串" GroupName="SHA1InputType" IsChecked="True" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <RadioButton Name="SHA1HexInputRadio" Content="Hex字符串" GroupName="SHA1InputType" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <Button Content="计算SHA1" Click="CalculateSHA1_Click" Padding="10,3" Margin="0,0,5,0" VerticalAlignment="Center"/>
                            <Button Content="清空" Click="ClearSHA1_Click" Padding="10,3" Margin="0,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>

                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="SHA1结果：" Margin="0,0,5,0" VerticalAlignment="Top"/>
                            <Label Grid.Column="1" Name="SHA1ResultLabel" Content="等待计算..." Padding="5" 
                                   Background="White" BorderBrush="Gray" BorderThickness="1" 
                                   HorizontalContentAlignment="Left"/>
                        </Grid>
                    </Grid>
                </GroupBox>
            </Grid>

            <!-- 第二行：SHA224和SHA256并排显示 -->
            <Grid Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- SHA224计算 -->
                <GroupBox Grid.Column="0" Header="SHA224计算" Margin="0,0,5,0" MinWidth="500">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="输入要计算SHA224的值：" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBox Name="SHA224InputTextBox" Height="25" VerticalAlignment="Center" Width="400"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                            <RadioButton Name="SHA224StringInputRadio" Content="普通字符串" GroupName="SHA224InputType" IsChecked="True" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <RadioButton Name="SHA224HexInputRadio" Content="Hex字符串" GroupName="SHA224InputType" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <Button Content="计算SHA224" Click="CalculateSHA224_Click" Padding="10,3" Margin="0,0,5,0" VerticalAlignment="Center"/>
                            <Button Content="清空" Click="ClearSHA224_Click" Padding="10,3" Margin="0,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>

                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="SHA224结果：" Margin="0,0,5,0" VerticalAlignment="Top"/>
                            <Label Grid.Column="1" Name="SHA224ResultLabel" Content="等待计算..." Padding="5" 
                               Background="White" BorderBrush="Gray" BorderThickness="1" 
                               HorizontalContentAlignment="Left"/>
                        </Grid>
                    </Grid>
                </GroupBox>

                <!-- SHA256计算 -->
                <GroupBox Grid.Column="1" Header="SHA256计算" Margin="5,0,0,0" MinWidth="420">
                    <Grid Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="输入要计算SHA256的值：" VerticalAlignment="Center" Margin="0,0,5,0"/>
                            <TextBox Name="SHA256InputTextBox" Height="25" VerticalAlignment="Center" Width="400"/>
                        </StackPanel>

                        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                            <RadioButton Name="SHA256StringInputRadio" Content="普通字符串" GroupName="SHA256InputType" IsChecked="True" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <RadioButton Name="SHA256HexInputRadio" Content="Hex字符串" GroupName="SHA256InputType" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <Button Content="计算SHA256" Click="CalculateSHA256_Click" Padding="10,3" Margin="0,0,5,0" VerticalAlignment="Center"/>
                            <Button Content="清空" Click="ClearSHA256_Click" Padding="10,3" Margin="0,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>

                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="SHA256结果：" Margin="0,0,5,0" VerticalAlignment="Top"/>
                            <Label Grid.Column="1" Name="SHA256ResultLabel" Content="等待计算..." Padding="5" 
                               Background="White" BorderBrush="Gray" BorderThickness="1" 
                               HorizontalContentAlignment="Left"/>
                        </Grid>
                    </Grid>
                </GroupBox>
            </Grid>

            <!-- SHA384计算 - 独占一行 -->
            <GroupBox Header="SHA384计算" Margin="0,0,0,10" MinWidth="600">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="输入要计算SHA384的值：" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox Name="SHA384InputTextBox" Height="25" VerticalAlignment="Center" Width="400"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                        <RadioButton Name="SHA384StringInputRadio" Content="普通字符串" GroupName="SHA384InputType" IsChecked="True" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <RadioButton Name="SHA384HexInputRadio" Content="Hex字符串" GroupName="SHA384InputType" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <Button Content="计算SHA384" Click="CalculateSHA384_Click" Padding="10,3" Margin="0,0,5,0" VerticalAlignment="Center"/>
                        <Button Content="清空" Click="ClearSHA384_Click" Padding="10,3" Margin="0,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="SHA384结果：" Margin="0,0,5,0" VerticalAlignment="Top"/>
                        <Label Grid.Column="1" Name="SHA384ResultLabel" Content="等待计算..." Padding="5" 
                               Background="White" BorderBrush="Gray" BorderThickness="1" 
                               HorizontalContentAlignment="Left"/>
                    </Grid>
                </Grid>
            </GroupBox>

            <!-- SHA512计算 - 独占一行 -->
            <GroupBox Header="SHA512计算" Margin="0,0,0,10" MinWidth="500">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="输入要计算SHA512的值：" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox Name="SHA512InputTextBox" Height="25" VerticalAlignment="Center" Width="400"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                        <RadioButton Name="SHA512StringInputRadio" Content="普通字符串" GroupName="SHA512InputType" IsChecked="True" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <RadioButton Name="SHA512HexInputRadio" Content="Hex字符串" GroupName="SHA512InputType" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <Button Content="计算SHA512" Click="CalculateSHA512_Click" Padding="10,3" Margin="0,0,5,0" VerticalAlignment="Center"/>
                        <Button Content="清空" Click="ClearSHA512_Click" Padding="10,3" Margin="0,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="SHA512结果：" Margin="0,0,5,0" VerticalAlignment="Top"/>
                        <Label Grid.Column="1" Name="SHA512ResultLabel" Content="等待计算..." Padding="5" 
                               Background="White" BorderBrush="Gray" BorderThickness="1" 
                               HorizontalContentAlignment="Left"/>
                    </Grid>
                </Grid>
            </GroupBox>

            <!-- SHA3计算 - 独占一行 -->
            <GroupBox Header="SHA3计算" Margin="0,0,0,10" MinWidth="600">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="输入要计算SHA3的值：" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <TextBox Name="SHA3InputTextBox" Height="25" VerticalAlignment="Center" Width="400"/>
                    </StackPanel>

                    <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                        <RadioButton Name="SHA3StringInputRadio" Content="普通字符串" GroupName="SHA3InputType" IsChecked="True" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <RadioButton Name="SHA3HexInputRadio" Content="Hex字符串" GroupName="SHA3InputType" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <ComboBox Name="SHA3AlgorithmComboBox" Width="200" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <Button Content="计算SHA3" Click="CalculateSHA3_Click" Padding="10,3" Margin="0,0,5,0" VerticalAlignment="Center"/>
                        <Button Content="清空" Click="ClearSHA3_Click" Padding="10,3" Margin="0,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="SHA3结果：" Margin="0,0,5,0" VerticalAlignment="Top"/>
                        <Label Grid.Column="1" Name="SHA3ResultLabel" Content="等待计算..." Padding="5" 
                               Background="White" BorderBrush="Gray" BorderThickness="1" 
                               HorizontalContentAlignment="Left"/>
                    </Grid>
                </Grid>
            </GroupBox>

            <TextBlock Text="将文件拖放到此标签页以计算哈希值" 
                       HorizontalAlignment="Center" 
                       VerticalAlignment="Center" 
                       FontSize="14" 
                       Foreground="Gray" 
                       Margin="0,20,0,0" 
                       Name="FileDropHint"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>