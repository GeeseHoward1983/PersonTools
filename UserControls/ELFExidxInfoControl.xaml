<UserControl x:Class="PersonalTools.UserControls.ELFExidxInfoControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PersonalTools.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ScrollViewer>
            <TextBox Name="ExidxInfoTextBox" TextWrapping="Wrap" FontFamily="Consolas" 
                     VerticalScrollBarVisibility="Auto" IsReadOnly="True" 
                     AcceptsReturn="True" VerticalAlignment="Stretch" 
                     HorizontalAlignment="Stretch" Margin="5" />
        </ScrollViewer>
    </Grid>
</UserControl>