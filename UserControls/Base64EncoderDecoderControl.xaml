<UserControl x:Class="MyTool.UserControls.Base64EncoderDecoderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyTool.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800" Margin="10" AllowDrop="True" Drop="Base64Tab_Drop" PreviewDragOver="Grid_PreviewDragOver">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="待编码文本" Margin="0,0,0,5">
            <TextBox Name="Base64Input" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="5"/>
        </GroupBox>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
            <RadioButton Name="Base64StringInputRadio" Content="普通字符串" GroupName="Base64InputType" IsChecked="True" Margin="0,0,10,0" VerticalAlignment="Center"/>
            <RadioButton Name="Base64HexInputRadio" Content="Hex字符串" GroupName="Base64InputType" Margin="0,0,10,0" VerticalAlignment="Center"/>
            <Button Content="编码" Click="Base64Encode_Click" Padding="15,5" Margin="5"/>
            <Button Content="解码" Click="Base64Decode_Click" Padding="15,5" Margin="5"/>
            <Button Content="清空" Click="Base64Clear_Click" Padding="15,5" Margin="5"/>
        </StackPanel>

        <GroupBox Grid.Row="2" Header="编码结果/待解码文本" Margin="0,5,0,0">
            <TextBox Name="Base64Result" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="5"/>
        </GroupBox>
    </Grid>
</UserControl>