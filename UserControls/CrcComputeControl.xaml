<UserControl x:Class="MyTool.UserControls.CrcComputeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MyTool.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="800" Margin="10" AllowDrop="True" Drop="CrcTab_Drop" PreviewDragOver="Grid_PreviewDragOver">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="待计算文本" Margin="0,0,0,5">
            <TextBox Name="CRCInputTextBox" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="5"/>
        </GroupBox>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
            <RadioButton Name="CRCStringInputRadio" Content="普通字符串" GroupName="CRCInputType" IsChecked="True" Margin="0,0,10,0" VerticalAlignment="Center"/>
            <RadioButton Name="CRCHexInputRadio" Content="Hex字符串" GroupName="CRCInputType" Margin="0,0,10,0" VerticalAlignment="Center"/>
            <ComboBox Name="CRCAlgorithmComboBox" Width="200" Margin="0,0,10,0" VerticalAlignment="Center"/>
            <Button Content="计算CRC" Click="CalculateCRC_Click" Padding="10,3" Margin="0,0,5,0" VerticalAlignment="Center"/>
            <Button Content="清空" Click="ClearCRC_Click" Padding="10,3" Margin="0,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <GroupBox Grid.Row="2" Header="计算结果" Margin="0,5,0,0">
            <Label Name="CRCResultLabel" Content="等待计算..." Padding="5" Background="White" BorderBrush="Gray" BorderThickness="1" VerticalContentAlignment="Top" MinHeight="30"/>
        </GroupBox>
    </Grid>
</UserControl>