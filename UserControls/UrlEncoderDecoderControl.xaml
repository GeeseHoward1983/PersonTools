<UserControl x:Class="PersonalTools.UserControls.UrlEncoderDecoderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PersonalTools.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="800" Margin="10">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0" Header="待编码文本" Margin="0,0,0,5">
            <TextBox Name="UrlInput" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="5"/>
        </GroupBox>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
            <Button Content="编码" Click="UrlEncode_Click" Padding="15,5" Margin="5"/>
            <Button Content="解码" Click="UrlDecode_Click" Padding="15,5" Margin="5"/>
            <Button Content="清空" Click="UrlClear_Click" Padding="15,5" Margin="5"/>
        </StackPanel>

        <GroupBox Grid.Row="2" Header="编码结果/待解码文本" Margin="0,5,0,0">
            <TextBox Name="UrlResult" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="5"/>
        </GroupBox>
    </Grid>
</UserControl>